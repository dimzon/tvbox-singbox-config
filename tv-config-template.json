{
    "log": {
        "disabled": false,
        "level": "error",
        "timestamp": true
    },
    "experimental": {
        "clash_api": {
            "external_controller": "0.0.0.0:9090",
            "external_ui": "yacd",
            "external_ui_download_url": "https://github.com/MetaCubeX/Yacd-meta/archive/gh-pages.zip",
            "external_ui_download_detour": "direct",
            "secret": "",
            "default_mode": "rule"
        }
    },
    "dns": {
        "servers": [
            {
                "address": "tcp://1.1.1.1",
                "address_resolver": "dns-direct",
                "strategy": "prefer_ipv4",
                "tag": "dns-remote"
            },
            {
                "address": "tcp://1.1.1.1",
                "address_resolver": "dns-local",
                "detour": "direct",
                "strategy": "prefer_ipv4",
                "tag": "dns-direct"
            },
            {
                "address": "local",
                "detour": "direct",
                "tag": "dns-local"
            },
            {
                "address": "rcode://success",
                "tag": "dns-block"
            }
        ],
        "rules": [
            {
                "domain_suffix": [
                    ".ru"
                ],
                "server": "dns-direct"
            },
            {
                "outbound": "direct",
                "server": "dns-direct",
                "rewrite_ttl": 20
            },
            {
                "outbound": "any",
                "server": "dns-direct",
                "rewrite_ttl": 20
            }
        ],
        "reverse_mapping": true,
        "strategy": "prefer_ipv4",
        "independent_cache": true
    },
    "inbounds": [
        {
            "listen": "0.0.0.0",
            "listen_port": 6450,
            "override_address": "8.8.8.8",
            "override_port": 53,
            "tag": "dns-in",
            "type": "direct"
        },
        {
            "type": "tun",
            "tag": "tun-in",
            "domain_strategy": "",
            "interface_name": "tun0",
            "address": "172.19.0.1/30",
            "mtu": 9000,
            "auto_route": true,
            "strict_route": true,
            "stack": "system",
            "endpoint_independent_nat": true,
            "sniff": true,
            "sniff_override_destination": false,
            "exclude_package": [
				"ru.yandex.weatherplugin",
				"com.softmedia.receiver",
				"adbd",
                "com.anydesk.anydeskandroid",
                "ru.kinopoisk.tv",
                "ru.ivi.client",
                "com.ugoos.ugoos_tv_remote_srv",
                "ru.vk.store",
                "zank.remote",
                "ru.rutube.app",
                "ugoos.remotecontrolbinder",
                "limehd.ru.ctvshka",
                "com.anydesk.anydeskandroid",
                "com.droidlogic.miracast",
                "com.vk.tv",
                "live.vkplay.app",
                "com.google.android.tv.remote.service",
                "com.anydesk.adcontrol.aosp"
            ]
        },
        {
            "domain_strategy": "",
            "listen": "0.0.0.0",
            "listen_port": 2080,
            "sniff": true,
            "sniff_override_destination": false,
            "tag": "mixed-in",
            "type": "mixed"
        }
    ],
    "outbounds": [
        {
            "tag": "direct",
            "type": "direct"
        },
        {
            "tag": "bypass",
            "type": "direct"
        },
        {
            "tag": "block",
            "type": "block"
        },
        {
            "tag": "dns-out",
            "type": "dns"
        }
    ],
    "route": {
        "rule_set": [
            {
                "type": "remote",
                "tag": "tv-extra",
                "update_interval": "1d",
                "download_detour": "proxy",
                "url": "https://raw.githubusercontent.com/dimzon/tvbox-singbox-config/main/tv-ruleset-extra.srs",
                "format": "binary"
            }
        ],
        "auto_detect_interface": true,
        "override_android_vpn": true,
        "final": "bypass",
        "rules": [
            {
                "outbound": "dns-out",
                "port": [
                    53
                ]
            },
            {
                "inbound": [
                    "dns-in"
                ],
                "outbound": "dns-out"
            },
            {
                "rule_set": "tv",
                "outbound": "proxy"
            },
            {
                "rule_set": "tv-extra",
                "outbound": "proxy"
            },
            {
                "ip_cidr": [
                    "224.0.0.0/3",
                    "ff00::/8"
                ],
                "outbound": "block",
                "source_ip_cidr": [
                    "224.0.0.0/3",
                    "ff00::/8"
                ]
            }
        ]
    }
}